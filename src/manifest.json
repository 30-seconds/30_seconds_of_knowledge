{
  "manifest_version": 3,
  "author": "Stefan PetroviÄ‡",
  "name": "30 Seconds of Knowledge",
  "short_name": "30 SoK",
  "homepage_url": "https://30secondsofknowledge.com",
  "options_ui": {
    "page": "settings.html"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "toolbar-icon-128.png"
  },
  "icons": {
    "16": "icon-16.png",
    "32": "icon-32.png",
    "64": "icon-64.png",
    "128": "icon-128.png",
    "256": "icon-256.png",
    "512": "icon-512.png",
    "1024": "icon-1024.png"
  },
  "permissions": ["storage", "clipboardWrite"],
  "web_accessible_resources": [
    {
      "resources": [
        "icon-16.png",
        "icon-32.png",
        "icon-64.png",
        "icon-128.png",
        "icon-256.png",
        "icon-512.png",
        "icon-1024.png",
        "toolbar-icon-16.png",
        "toolbar-icon-32.png",
        "toolbar-icon-64.png",
        "toolbar-icon-128.png",
        "toolbar-icon-256.png",
        "toolbar-icon-512.png",
        "toolbar-icon-1024.png"
      ],
      "matches": []
    }
  ],
  "content_security_policy": {
    "script-src": "self",
    "object-src": "self"
  }
}
